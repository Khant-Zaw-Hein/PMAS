@using X.PagedList.Mvc;
@using X.PagedList;
@model X.PagedList.IPagedList<PMAS.Models.ProgramViewModel>


<link href="~/Content/PagedList.css" rel="stylesheet" />

<!-- begin:: Content -->
<div class="kt-container kt-grid__item kt-grid__item--fluid" style="padding-right: 0px;padding-left: 0px;">

    <div class="kt-portlet kt-portlet--mobile">
        <div class="kt-portlet__head kt-portlet__head--lg">
            <div class="kt-portlet__head-label">
                <span class="kt-portlet__head-icon">
                    <i class="kt-font-brand  fas fa-list"></i>
                </span>
                <h3 class="kt-portlet__head-title">
                    Employee List
                </h3>
            </div>
            <div class="d-flex justify-content-end" data-kt-customer-table-toolbar="base">
                <!--begin::Export-->
                <button type="button" class="btn btn-light-success me-3" data-bs-toggle="modal" data-bs-target="#kt_customers_export_modal">
                    <!--begin::Svg Icon | path: icons/duotune/arrows/arr078.svg-->
                    <span class="svg-icon svg-icon-2">
                        <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                            <rect opacity="0.3" x="12.75" y="4.25" width="12" height="2" rx="1" transform="rotate(90 12.75 4.25)" fill="currentColor" />
                            <path d="M12.0573 6.11875L13.5203 7.87435C13.9121 8.34457 14.6232 8.37683 15.056 7.94401C15.4457 7.5543 15.4641 6.92836 15.0979 6.51643L12.4974 3.59084C12.0996 3.14332 11.4004 3.14332 11.0026 3.59084L8.40206 6.51643C8.0359 6.92836 8.0543 7.5543 8.44401 7.94401C8.87683 8.37683 9.58785 8.34458 9.9797 7.87435L11.4427 6.11875C11.6026 5.92684 11.8974 5.92684 12.0573 6.11875Z" fill="currentColor" />
                            <path opacity="0.3" d="M18.75 8.25H17.75C17.1977 8.25 16.75 8.69772 16.75 9.25C16.75 9.80228 17.1977 10.25 17.75 10.25C18.3023 10.25 18.75 10.6977 18.75 11.25V18.25C18.75 18.8023 18.3023 19.25 17.75 19.25H5.75C5.19772 19.25 4.75 18.8023 4.75 18.25V11.25C4.75 10.6977 5.19771 10.25 5.75 10.25C6.30229 10.25 6.75 9.80228 6.75 9.25C6.75 8.69772 6.30229 8.25 5.75 8.25H4.75C3.64543 8.25 2.75 9.14543 2.75 10.25V19.25C2.75 20.3546 3.64543 21.25 4.75 21.25H18.75C19.8546 21.25 20.75 20.3546 20.75 19.25V10.25C20.75 9.14543 19.8546 8.25 18.75 8.25Z" fill="currentColor" />
                        </svg>
                    </span>
                    <!--end::Svg Icon-->Export
                </button>
                <!--end::Export-->
                <!--begin::Add code table-->
                <div class="kt-portlet__head-wrapper">
                    <div class="kt-portlet__head-actions">
                        @{
                            string CreatePageURL = Url.Content("~") + "Program/Create";
                            <a href=@CreatePageURL class="btn btn-success btn-elevate btn-icon-sm">
                                <i class="la la-plus"></i>
                                New
                            </a>
                        }
                    </div>
                </div>
                <!--end::Add code table-->
            </div>
        </div>
    </div>
    <br />
    <!--begin:: Portlet-->
    <div class="kt-portlet">
        <div class="kt-portlet__body">
            <!--begin: Datatable -->
            <table class="table table-checkable dataTable no-footer dtr-inline collapsed dt-responsive" id="kt_table_program" style="width:100%">
                <thead>
                    <!--begin::Table row-->
                    <tr class="text-start text-gray-400 fw-bold fs-7 text-uppercase gs-0">
                        <th>
                            Department
                        </th>
                        <th>
                            Employee Name
                        </th>
                        <th>
                            Designation
                        </th>
                        <th>
                            Rank
                        </th>
                        <th>
                            Job Description Form
                        </th>
                        <th>
                            Action
                        </th>
                    </tr>
                    <!--end::Table row-->
                </thead>
                <tbody>
                    @for (int i=0; i<10; i++)
                    {
                        <tr data-row="0" class="kt-datatable__row" style="left: 0px;" id="111">
                            <td>
                                HR Department
                            </td>
                            <td>
                                Employee @(i+1)
                            </td>
                            <td>
                                HR
                            </td>
                            <td>Junior Officer </td>
                            <td><a href="#" class="btn btn-secondary">View</a></td>
                            <td>
                                <span style="overflow: visible; position: relative; width: 110px;">
                                    <a title="Edit details"
                                       href="@Url.Action("EditEmployee", "HR", new { detailID = 1 })"
                                       class="btn btn-sm btn-clean btn-icon btn-icon-md">
                                        <i class="la la-edit"></i>
                                    </a>
                                    <a title="Delete" id="butRemove" class="btn btn-sm btn-clean btn-icon btn-icon-md">
                                        <i class="la la-trash"></i>
                                    </a>
                                </span>
                            </td>
                        </tr>
                    }
                </tbody>

            </table>
            <!--end: Datatable -->
        </div>
    </div>
    <!--end:: Portlet-->
</div>
<!-- end:: Content -->

<div class="kt-container  kt-grid__item kt-grid__item--fluid" style="padding-right: 0px;padding-left: 0px;">
    <div class="row">
        <div class="col-xl-12">
            <!--begin: Pagination -->
            <div class="kt-portlet">
                <div class="kt-portlet__body" style="padding-top: 0px;padding-bottom: 0px;">
                    <div class="kt-pagination  kt-pagination--brand">
                        <div id="divPagin">
                            @*@Html.PagedListPager(Model, page => " javascript:PaginClick('" + page + "')")*@
                        </div>
                        <div class="kt-pagination__toolbar">
                            <select class="form-control kt-font-brand" id="ddlPageSize" onchange="javascript: DropDownOnChange()" style="width: 60px;">
                                <option value="10">10</option>
                                <option value="50">50</option>
                                <option value="100">100</option>
                            </select>
                            <span class="pagination__desc">
                                @*Displaying @Model.Count of @Model.TotalItemCount records*@
                            </span>
                        </div>
                    </div>
                </div>
            </div>
            <!--end: Pagination -->
        </div>
    </div>
</div>



<script>
    $(document).ready(function () {

        $("#kt_table_program").DataTable({
            "responsive": true,
            "searching": false,
            "lengthChange": false,
            "paging": false,
            "bInfo": false,
            "ordering": false,
            "language": {
                "loadingRecords": "<i class='fa fa-spinner fa-spin'></i> Loading data...",
                "sEmptyTable": "No Program"
            },
        });
    });
</script>

